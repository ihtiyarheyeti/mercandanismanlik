RewriteEngine On

# SSL yönlendirmesi
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# www'suz versiyona yönlendir
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# PHP dosyalarını çalıştır
AddType application/x-httpd-php .php

# API istekleri için
RewriteRule ^(api|sanctum)(/.*)?$ backend/public/index.php [L,QSA]

# Statik dosyalar için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/$1 [L]

# SPA yönlendirmesi
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/index.html [L]

# CORS Headers
Header set Access-Control-Allow-Origin "https://mercandanismanlik.com"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "X-Requested-With, Content-Type, X-Token-Auth, Authorization, X-CSRF-TOKEN"
Header set Access-Control-Allow-Credentials "true"