# Ana yönlendirme kuralları
RewriteEngine On
RewriteBase /

# SSL ve www yönlendirmeleri
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteCond %{HTTP_HOST} ^(?:www\.)?(.+)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [L,NE,R=301]

# API istekleri için backend'e yönlendir
RewriteRule ^api/(.*)$ backend/public/index.php [L,QSA]
RewriteRule ^sanctum/csrf-cookie$ backend/public/index.php [L,QSA]

# Statik dosyalar için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/$1 [L]

# SPA yönlendirmesi - tüm diğer istekler için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/index.html [L]

# Güvenlik Başlıkları
<IfModule mod_headers.c>
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # CORS Headers
    Header always set Access-Control-Allow-Origin "https://mercandanismanlik.com"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "X-Requested-With, Content-Type, X-Token-Auth, Authorization, X-CSRF-TOKEN"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>

# Önbellekleme
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Error Documents
ErrorDocument 404 /frontend/mercan-frontend/dist/index.html