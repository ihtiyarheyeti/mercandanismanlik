RewriteEngine On
Options -MultiViews

# Temel PHP ayarları
AddType application/x-httpd-php .php
AddHandler application/x-httpd-php .php

# SSL yönlendirmesi
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# www'suz versiyona yönlendir
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# API ve Sanctum istekleri için backend'e yönlendir
RewriteCond %{REQUEST_URI} ^/(api|sanctum) [NC]
RewriteRule ^(.*)$ backend/public/index.php [L,QSA]

# Frontend dist klasöründeki dosyalar için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} ^/assets/
RewriteRule ^assets/(.*)$ frontend/mercan-frontend/dist/assets/$1 [L]

# Frontend için tüm rotaları index.html'e yönlendir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/(api|sanctum|backend) [NC]
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/index.html [L]

# CORS Headers
Header always set Access-Control-Allow-Origin "https://mercandanismanlik.com"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "X-Requested-With, Content-Type, X-Token-Auth, Authorization, X-CSRF-TOKEN"
Header always set Access-Control-Allow-Credentials "true"

# Güvenlik başlıkları
Header always set X-Content-Type-Options "nosniff"
Header always set X-XSS-Protection "1; mode=block"
Header always set X-Frame-Options "SAMEORIGIN"

# Önbellek kontrolü
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>

<FilesMatch "\.(js|css|jpg|jpeg|png|gif|ico|svg|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>