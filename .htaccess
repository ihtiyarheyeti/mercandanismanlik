# LiteSpeed için ana .htaccess
RewriteEngine On
RewriteBase /

# SSL Yönlendirmesi
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# www olmadan yönlendirme
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Bot ve kötü niyetli istekleri engelle
RewriteCond %{HTTP_USER_AGENT} (bot|spider|crawler|curl|wget|slurp|mediapartners) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (^$|^mozilla/\d\.\d$) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC,OR]
RewriteCond %{QUERY_STRING} (eval\() [NC,OR]
RewriteCond %{QUERY_STRING} (127\.0\.0\.1) [NC,OR]
RewriteCond %{QUERY_STRING} ([a-z0-9]{2000,}) [NC,OR]
RewriteCond %{QUERY_STRING} (javascript:)(.*)(;) [NC,OR]
RewriteCond %{QUERY_STRING} (base64_encode)(.*)(\() [NC,OR]
RewriteCond %{QUERY_STRING} (GLOBALS|REQUEST)(=|\[|%) [NC,OR]
RewriteCond %{QUERY_STRING} (<|%3C)(.*)script(.*)(>|%3) [NC,OR]
RewriteCond %{QUERY_STRING} (\\|\.\.\.|\.\./|~|`|<|>|\|) [NC,OR]
RewriteCond %{QUERY_STRING} (boot\.ini|etc/passwd|self/environ) [NC,OR]
RewriteCond %{QUERY_STRING} (thumbs?(_editor|open)?|tim(thumb)?)\.php [NC,OR]
RewriteCond %{QUERY_STRING} (\'|\")(.*)(drop|insert|md5|select|union) [NC]
RewriteRule .* - [F]

# Cloudflare CDN için özel yönlendirmeler
RewriteCond %{REQUEST_URI} ^/cdn-cgi/
RewriteRule ^(.*)$ - [L]

# API istekleri için backend'e yönlendir
RewriteRule ^api/(.*)$ backend/public/index.php [L,QSA]
RewriteRule ^sanctum/csrf-cookie$ backend/public/index.php [L,QSA]

# Statik dosyalar için
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/$1 [L]

# Vue Router için tüm yönlendirmeler
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api
RewriteCond %{REQUEST_URI} !^/sanctum
RewriteCond %{REQUEST_URI} !^/cdn-cgi
RewriteRule ^(.*)$ frontend/mercan-frontend/dist/index.html [L]

# Güvenlik Başlıkları
<IfModule mod_headers.c>
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # CORS Headers
    Header always set Access-Control-Allow-Origin "https://mercandanismanlik.com"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "X-Requested-With, Content-Type, X-Token-Auth, Authorization"
    Header always set Access-Control-Allow-Credentials "true"
    
    # CSP Header - Cloudflare için güncellendi
    Header always set Content-Security-Policy "default-src 'self' https: data: 'unsafe-inline' 'unsafe-eval' *.cloudflare.com; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https: wss:;"
</IfModule>

# Önbellekleme
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, must-revalidate"
</FilesMatch>

<FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Cloudflare için özel önbellek ayarları
<FilesMatch "^(index\.html)?$">
    Header set Cache-Control "public, no-cache, must-revalidate, proxy-revalidate, max-age=0"
</FilesMatch>

# Sıkıştırma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# PHP ayarları
<IfModule mod_php.c>
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_flag display_errors off
    php_flag log_errors on
</IfModule>

# Error Documents
ErrorDocument 404 /frontend/mercan-frontend/dist/index.html
ErrorDocument 403 /frontend/mercan-frontend/dist/index.html